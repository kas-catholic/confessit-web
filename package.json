    "@types/react-dom": "^18.3.0",
    "astro": "^5.1.9",
    "astro-i18next": "^1.0.0-beta.21",
    "i18next": "^22.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^12.3.1",
    "swiper": "^11.1.9",
    "tailwindcss": "^3.4.9"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.14",
    "@vite-pwa/astro": "^0.5.0",
    "daisyui": "^4.12.10",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
